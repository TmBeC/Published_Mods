local __util = require 'larian.util'

function HasHexStatus()
    return HasAnyStatus({'HEX_STRENGTH','HEX_DEXTERITY','HEX_CONSTITUTION','HEX_INTELLIGENCE','HEX_WISDOM','HEX_CHARISMA','HEX_HEXBLOOD_STRENGTH','HEX_HEXBLOOD_DEXTERITY','HEX_HEXBLOOD_CONSTITUTION','HEX_HEXBLOOD_INTELLIGENCE','HEX_HEXBLOOD_WISDOM','HEX_HEXBLOOD_CHARISMA'}, {}, {},context.Target,context.Source)
end

function SpellActivations()
    return SpellId('Target_WitchBolt_Activate') | SpellId('Target_Hex_Reapply_Strength') | SpellId('Target_Hex_Reapply_Dexterity') | SpellId('Target_Hex_Reapply_Constitution') | SpellId('Target_Hex_Reapply_Intelligence') | SpellId('Target_Hex_Reapply_Wisdom') | SpellId('Target_Hex_Reapply_Charisma') | SpellId('Target_Hex_Hexblood_Reapply_Strength') | SpellId('Target_Hex_Hexblood_Reapply_Dexterity') | SpellId('Target_Hex_Hexblood_Reapply_Constitution') | SpellId('Target_Hex_Hexblood_Reapply_Intelligence') | SpellId('Target_Hex_Hexblood_Reapply_Wisdom') | SpellId('Target_Hex_Hexblood_Reapply_Charisma')
end
